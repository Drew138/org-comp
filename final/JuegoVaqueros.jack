   method void run() {
      var char key;  // tecla presionada
      var boolean exit;
      var Bala bala;
      let exit = false;
      
      while (~exit) {
         // ciclo espernado teclas
         if (key = 0) {
            let key = Keyboard.keyPressed();
            do moverBalas();
            do revisarChoques();
         }
         if (~(vaquero1 = null)) {
            do accionesVaquero1(key);
         }
         if (~(vaquero2 = null)) {
            do accionesVaquero2(key);
         }
         if (~(vaquero3 = null)) {
