         }
         if (~(vaquero4 = null)) {
            do accionesVaquero4(key);
         }
         // Ciclo esperando liberar tecla para no hacer mÃ¡s funciones por error
         while (~(key = 0)) {
            let key = Keyboard.keyPressed();
            do revisarChoques();
            do moverBalas();
         }
     } // while
